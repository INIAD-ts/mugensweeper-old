{
  "compilerOptions": {
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "$/*": ["./*"],
      "$prisma/*": ["./node_modules/.prisma/*"]
    },
    "types": ["vitest/importMeta"],
    "rootDir": ".",
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "target": "es6",
    "incremental": true
  }
}
