datasource db {
  provider = "postgresql"
  url      = env("API_DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt DateTime @default(now())
  label     String
  done      Boolean  @default(false)
}

model User {
  userId      String   @id
  displayName String
  photoUrl    String
  createdAt   DateTime @default(now())
}
